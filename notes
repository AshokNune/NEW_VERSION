def contains_potential_password(text: str, row_keywords: list, custom_keywords: list) -> bool:
    if not text:
        return False
    all_kws = set([kw.strip() for kw in row_keywords + custom_keywords if kw.strip()])
    for kw in all_kws:
        # Match keyword, optional spaces, separator (: or =), then some value
        pat = rf'{re.escape(kw)}\s*[:=]\s*(\S+)'
        m = re.search(pat, text, re.IGNORECASE)
        if m:
            value = m.group(1)
            # Exclude placeholder-like %xxx%
            if re.match(r'%[^%]+%', value):
                continue
            return True
    return False
